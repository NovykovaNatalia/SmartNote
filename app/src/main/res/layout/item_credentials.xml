<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/border"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/line_one_credentials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchViewCredentials"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:weightSum="2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name_credentials"
            android:layout_weight="2"
            android:text="Credentials"
            android:textColor="@color/teal_700"
            android:layout_width="158dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/name_credentials_tv"
            android:layout_weight="2"
            android:hint="Credentials"
            android:layout_width="158dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/line_two_credentials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/line_one_credentials"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reference_credential"
            android:layout_weight="2"
            android:text="Reference"
            android:textColor="@color/teal_700"
            android:layout_width="158dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/reference_credential_tv"
            android:layout_weight="2"
            android:hint="Reference"
            android:layout_width="158dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line_three_credentials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_alignBottom="@+id/line_two_credentials">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_more_horiz_24" />
    </LinearLayout>


</RelativeLayout>