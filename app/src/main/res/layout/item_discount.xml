<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/border"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/line_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:layout_marginLeft="20dp"
        android:layout_margin="10dp"
        android:orientation="vertical">
    <TextView
        android:id="@+id/thing_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/unit_of_goods"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/thing_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/unit_of_goods" />
    <TextView
        android:id="@+id/brend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/brend"
        android:textSize="10sp"/>
    <TextView
        android:id="@+id/brend_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/brend"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.25"
        android:layout_margin="10dp"
        android:id="@+id/line_two">
        <TextView
            android:id="@+id/true_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/true_price"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/true_price_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/true_price" />

        <TextView
            android:id="@+id/economy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/economy"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/economy_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/economy" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="0.25"
        android:layout_margin="10dp"
        android:id="@+id/line_three"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/discount"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/discount_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/discount" />

        <TextView
            android:id="@+id/percentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/percentage"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/percenage_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/percentage"
            android:text="@string/percentage" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_four"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_more_horiz_24" />
    </LinearLayout>

</LinearLayout>
