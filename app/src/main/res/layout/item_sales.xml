<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/border"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/line_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/thing_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Things"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/thing_name_tv"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:hint="Thing" />

        <TextView
            android:id="@+id/brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/brend_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Brand" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/line_one"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sales_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sales"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/sales_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Sales" />

        <TextView
            android:id="@+id/true_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="True price"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/true_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="True price" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/line_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/line_two"
        android:orientation="vertical">

        <TextView
            android:id="@+id/percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Persentage"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/percenage_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Pecentage" />

        <TextView
            android:id="@+id/economy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Economy"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/economy_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Economy" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_two_text_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@+id/line_three"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_baseline_more_horiz_24" />
    </LinearLayout>


</RelativeLayout>