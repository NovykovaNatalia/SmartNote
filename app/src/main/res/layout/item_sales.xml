<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:layout_margin="5dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/line_text_views"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/searchView"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/thing_name"
            android:layout_weight="2"
            android:textColor="@color/teal_700"
            android:text="Things"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/brand"
            android:layout_weight="2"
            android:textColor="@color/teal_700"
            android:text="Brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/sales_price"
            android:layout_weight="2"
            android:textColor="@color/teal_700"
            android:text="Sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/true_price"
            android:layout_weight="2"
            android:textColor="@color/teal_700"
            android:text="True price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/line_one_sales_dv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/line_text_views"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/thing_name_tv"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Thing" />
        <TextView
            android:id="@+id/brend_tv"
            android:layout_weight="2"
            android:hint="Brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/sales_price_tv"
            android:layout_weight="2"
            android:hint="Sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/true_price_tv"
            android:layout_weight="2"
            android:hint="True price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line_two"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/line_two_text_views"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/economy_tv"
            android:layout_weight="2"
            android:hint="Economy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/percenage_tv"
            android:layout_weight="2"
            android:hint="Pecentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_more_horiz_24"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_two_text_views"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_one"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/economy"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Economy"
            android:textColor="@color/teal_700" />
        <TextView
            android:id="@+id/percentage"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Persentage"
            android:textColor="@color/teal_700" />
    </LinearLayout>


</RelativeLayout>