<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:layout_margin="5dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/line_one_events"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date_event_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/data"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_event_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_event_tv"
            android:layout_weight="6"
            android:hint="@string/event" />

        <TextView
            android:id="@+id/time_event_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/date_event_tv"
            android:text="00 : 00 PM"
            android:textSize="12sp" />

    </RelativeLayout>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:foregroundGravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_baseline_more_horiz_24" />


</RelativeLayout>