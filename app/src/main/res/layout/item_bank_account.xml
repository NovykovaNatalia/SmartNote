<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/parentRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/border"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/line_one"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/salary_account_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/account_type"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/salary_account_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="@string/account_type"
                android:text="@string/salary_account" />

            <TextView
                android:id="@+id/number_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:hint="@string/account_number"
                android:text="@string/account_number"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/number_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="@string/account_number" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/line_four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="20dp"
            android:layout_margin="10dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/line_one"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bank_name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/bank_name"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/bank_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="@string/bank_name"
                android:text="@string/bank" />

            <TextView
                android:id="@+id/person_name_surname_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:text="@string/name_surname"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/person_name_surname_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="@string/name_surname" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/line_three"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_baseline_more_horiz_24" />
    </LinearLayout>

    </LinearLayout>


