<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/fone"
    android:background="@drawable/border"
    android:layout_margin="5dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/line_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchView"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/salary_account_tv"
            android:layout_weight="2"
            android:text="Salary Account"
            android:layout_width="wrap_content"
            android:hint="Account Type"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/bank_name_tv"
            android:layout_weight="2"
            android:text="Bank"
            android:hint="Bank Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/line_one_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchView"
        android:layout_margin="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/salary_account_title"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:text="Account Type"
            android:textColor="@color/teal_700"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/bank_name_title"
            android:layout_weight="2"
            android:text="Bank Name"
            android:textColor="@color/teal_700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line_two"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/line_one_title"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/number_tv"
            android:layout_weight="2"
            android:hint="Account Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/person_name_surname_tv"
            android:layout_weight="2"
            android:hint="Name, Surname "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_more_horiz_24"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line_two_title"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/line_one_title"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/number_title"
            android:layout_weight="2"
            android:text="Account Number"
            android:textColor="@color/teal_700"
            android:hint="Account Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/person_name_surname_title"
            android:layout_weight="2"
            android:text="Name, Surname"
            android:textColor="@color/teal_700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>