<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smartnote" >

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/robot"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartNote2" >
        <activity
            android:name=".ui.settings.PrivacyPolicy"
            android:label="@string/title_activity_privacy_policy"
            android:theme="@style/Theme.SmartNote2.NoActionBar" >
        </activity>
        <activity
            android:name=".ui.settings.Version"
            android:label="@string/title_activity_version"
            android:theme="@style/Theme.SmartNote2.NoActionBar" />
        <activity android:name=".ui.settings.AboutSmartNote" />
        <activity android:name=".ui.settings.Settings" />
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/Theme.SmartNote2.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.SmartNote2.NoActionBar" />
    </application>

</manifest>