<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nnnd.smartnote" >
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartNote" >
        <activity
            android:name=".ui.settings.PrivacyPolicy"
            android:label="@string/title_activity_privacy_policy"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SmartNote.NoActionBar" >
        </activity>
        <activity
            android:name=".ui.settings.Version"
            android:label="@string/title_activity_version"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SmartNote.NoActionBar" />
        <activity
            android:name=".ui.draws.DrawFragment"
            android:label="@string/draws"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SmartNote.NoActionBar" />
        <activity
            android:name=".ui.draws.DrawActivity"
            android:label="@string/draws"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SmartNote.NoActionBar" />
        <activity
            android:name=".ui.events.DatePicker"
            android:label="Date Picker"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SmartNote.NoActionBar" />
        <activity android:name=".ui.settings.AboutSmartNote" />
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SmartNote.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:theme="@style/Theme.SmartNote.NoActionBar" />
    </application>

</manifest>